extends ./layout.jade

block content
	div.header Simple multiplayer ping pong game

	div#data
		div Your hash is: 
			span#hash

		div Play with 
			input#opponent(type='text')
			div#connect(href='#', class='btn') Connect

		div#request The player 
			span#opponent-hash
			|  want to play with you 

			div#accept(href='#', class='btn') Accept 
			div#reject(href='#', class='btn btn-neg') Reject

		div#status

	div#score 0 - 0

	div#game

	a(href='https://github.com/ottoszika/pongjs')
		img(style='position: absolute; top: 0; right: 0; border: 0;',
			src='https://camo.githubusercontent.com/52760788cde945287fbb584134c4cbc2bc36f904/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f77686974655f6666666666662e706e67',
			alt='Fork me on GitHub',
			data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_white_ffffff.png')